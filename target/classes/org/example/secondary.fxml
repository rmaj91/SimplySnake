<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainPane" alignment="BOTTOM_CENTER" onKeyPressed="#keyPressed" onKeyReleased="#keyReleased" spacing="20.0" style="-fx-background-color: #888888;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.SecondaryController">
    <children>
      <TilePane fx:id="snakeBoardPane" hgap="2.0" prefColumns="4" prefRows="4" style="-fx-background-color: #333333;" vgap="2.0">
         <children>
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
            <Pane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding></TilePane>
      <HBox alignment="CENTER">
         <children>
            <Label disable="true" text="Points:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="pointsLabel" disable="true" text="Label">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="startButtton" mnemonicParsing="false" onAction="#startClicked" text="Start">
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font></Button>
              <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="Back">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
